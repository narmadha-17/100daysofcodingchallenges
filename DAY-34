//BIRTHDAY CAKE CANDLES
//HACKERRANK
JAVA
import java.io.*;
import java.util.*;
import java.math.*;
public class solution{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int candles[]=new int[n];
        int sum=0;
        for(int i=0;i<n;i++){
            candles[i]=sc.nextInt();
            if (candles[i]>sum){
                sum=candles[i];
            }
        }
        int total=0;
        for(int j=0;j<n;j++){
            if(sum==candles[j]){
                    total++;
            }
        }
        System.out.println(total);
    }
}

//playing with characters
//hacker rank
//c
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    char ch;
    char s[24];
    char sen[100];
    scanf("%c",&ch);
    scanf("%s",s);
    scanf("\n%[^\n]s",sen);
    printf("%c",ch);
    printf("\n%s",s);
    printf("\n%s",sen);
    
    return 0;
}
